<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V18</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="/css/util.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
</head>
@model LoginModelView
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LoginLayout";
}
<body style="background-color: #666666;">
    <style>
        /* Custom CSS for responsiveness */
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .login-container {
            width: 80%;
            max-width: 500px; /* Adjust as needed */
            background-color: rgba(0, 0, 0, 0.4);
            box-shadow: 0 0 10px rgba(79, 74, 74, 0.79);
            padding: 30px;
        }
/* 
        .login100-form {
          
            background-color: #f3f3f300;
         } */
        .login100-form-title {
            font-size: 36px;
            color: white;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .rememberme
        {
            color:white;
        }
        .form-control {
            padding: 15px;
            border-radius: 20px;
        }

        .login100-form-btn {
            width: 100%;
            background-color: #149f04;
            color: white;
            padding: 15px;
            border-radius: 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .login100-form-btn:hover {
                background-color: #0d7103;
            }
    </style>

    <div class="container">
        <div class="login-container">
            <form asp-controller="Account" asp-action="AdvanceLogin" class="login100-form">
                <span class="login100-form-title">
                    تسجيل الدخول
                </span>

                <div class="form-group">
                    <input asp-for="UsernameOrEmail" class="form-control" placeholder="اسم المستخدم أو البريد الإلكتروني" />
                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="كلمة المرور" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="checkbox" id="remember-me" name="remember-me" class="mr-2 ">
                    <label class="rememberme" for="remember-me">تذكرني</label>
                </div>

                <div class="form-group">
                    <button type="submit" class="login100-form-btn">تسجيل الدخول</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="/vendor/animsition/js/animsition.min.js"></script>
    <script src="/vendor/bootstrap/js/popper.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/vendor/select2/select2.min.js"></script>
    <script src="/vendor/daterangepicker/moment.min.js"></script>
    <script src="/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="/vendor/countdowntime/countdowntime.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
